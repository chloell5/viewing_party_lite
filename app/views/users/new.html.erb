<div style="text-align:center;">
  <h1>New User Registration</h1>
  <br>
  <br>
  <br>
  <%= form_with url: users_path, method: :post, local: true do |f| %>
    <%= f.label :name %>
      <%= f.text_field :name %>
      <br>
      <%= f.label :email %>&nbsp;
      <%= f.text_field :email %>
      <br>
    <%= f.submit 'Register' %>
  <% end %>
</div>
